FROM maven:3.6.3-openjdk-11 AS maven_build
RUN useradd --uid 1100 example --create-home
COPY pom.xml /build/
COPY src /build/src/
WORKDIR /build/
RUN mvn package

FROM openjdk
RUN chmod g+rwX /tmp
ENV SERVER_PORT=8080
ENV ARTIFACT_NAME spring-boot.jar
ARG JAR_FILE=/build/target/*.jar
WORKDIR /tmp
COPY --from=maven_build  /build/target/*.jar /tmp/spring-boot.jar
EXPOSE $SERVER_PORT
RUN dir
RUN cd /tmp && dir
USER 1100
ENTRYPOINT ["java", "-jar", "spring-boot.jar"]