FROM maven:3.6.3-openjdk-11 AS maven_build
COPY pom.xml /build/
COPY src /build/src/
WORKDIR /build/
RUN mvn package

FROM openjdk
ARG user=javauser
ARG group=javauser
ARG uid=1000
ARG gid=1000
RUN groupadd -g ${gid} ${group} && useradd -u ${uid} -G ${group} -s /bin/sh -D ${user}
ENV SERVER_PORT=8080
ENV ARTIFACT_NAME spring-boot.jar
ARG JAR_FILE=/build/target/*.jar
WORKDIR /app
COPY --from=maven_build  /build/target/*.jar /app/spring-boot.jar
EXPOSE $SERVER_PORT
USER ${user}
ENTRYPOINT ["java", "-jar", "/app/spring-boot.jar"]
