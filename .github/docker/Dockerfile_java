FROM maven:3.6.3-openjdk-11 AS maven_build
COPY pom.xml /build/
COPY src /build/src/
WORKDIR /build/
RUN mvn package

FROM openjdk
RUN mkdir -p /tmp/app
RUN chown -R 1100:1200 /tmp/app
ENV SERVER_PORT=8080
ENV ARTIFACT_NAME spring-boot.jar
ARG JAR_FILE=/build/target/*.jar
WORKDIR /tmp/app
USER 1100
COPY --chown=1100:1200 --from=maven_build  /build/target/*.jar spring-boot.jar
EXPOSE $SERVER_PORT
CMD java -jar spring-boot.jar
