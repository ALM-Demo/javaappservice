FROM maven:3.6.3-openjdk-11 AS maven_build
COPY pom.xml /build/
COPY src /build/src/
WORKDIR /build/
RUN mvn package

FROM openjdk
ENV SERVER_PORT=8080
ENV ARTIFACT_NAME spring-boot.jar
ARG JAR_FILE=/build/target/*.jar
RUN useradd -ms /bin/bash admin
USER 9999:9999
WORKDIR /tmp
COPY --from=maven_build  /build/target/*.jar /tmp/spring-boot.jar
EXPOSE $SERVER_PORT
RUN chown -R admin:admin /tmp
RUN chmod 755 /tmp
USER admin
ENTRYPOINT ["java", "-jar", "/tmp/spring-boot.jar"]
