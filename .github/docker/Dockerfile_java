FROM maven:3.6.3-openjdk-11 AS maven_build
RUN mkdir -p /build
COPY pom.xml /build/
COPY src /build/src/
WORKDIR /build/
RUN mvn package
RUN chmod 777 /build/target/*.jar
RUN useradd --uid 1100 javause
USER 1100

FROM openjdk
RUN useradd --uid 1100 javause
USER 1100:1100
ENV SERVER_PORT=8080
ENV ARTIFACT_NAME spring-boot.jar
ARG JAR_FILE=/build/target/*.jar

WORKDIR /tmp

COPY --chown=1100:1100 --from=maven_build  /build/target/*.jar /tmp/spring-boot.jar
EXPOSE $SERVER_PORT
USER 1100:1100

CMD java -jar /tmp/spring-boot.jar